<div class="ml-5 mt-5">
  <h5 id="fullname"> <%= @user.fullname %> </h2>
  <h5 id="welcome">Welcome!</h1>
</div>

<div class="row mt-5 pt-5">
  <div class="col-6">
    <h2 class="booking">My Dogs</h2>
    <% current_user.dogs.each do |dog| %>
      <div class="d-flex justify-content-center">
        <div class="card-show-photo" id="my-dog-avatar" style="background-image: url('<%= cl_image_path dog.photo%>')">
        </div>
      </div>
      <h3 class="text-center"><%= link_to dog.name, dog_path(dog) %></h3>
      <%= link_to 'Remove', dog, method: :delete, data: { confirm: 'Are you sure you want to remove your dog?' }, class: "btn btn-primary" %>

    <% end %>

  </div>

  <div class="col-6">
    <h2 class="booking">Recent Hangouts</h2>
    <% current_user.bookings.each do |booking| %>
    <% dog = Dog.find(booking.dog_id) %>

    <div class="d-flex align-items-center">
      <div class="card-show-photo" id="dog-avatar" style="background-image: url('<%= cl_image_path dog.photo %>')"></div>
      <div class="ml-5 mt-5">
        <h3><%= link_to dog.name, dog_path(dog) %></h3>
        <p>Owner Contact E-mail :&nbsp;<%= dog.user.email %></p>
        <p>Booking Dates :&nbsp;<%= booking.start_date.strftime("%A, %b %d") %>&nbsp;until&nbsp;<%= booking.end_date.strftime("%A, %b %d") %></p>
        <%= link_to "Delete", booking_path(booking), method: :delete, data: {
        confirm: "Are you sure you want to delete this booking?" }  %>
      </div>
      <% end %>
    </div>
  </div>
</div>

