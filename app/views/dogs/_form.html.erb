<div class = container>
  <%= simple_form_for [@dog] do |f| %>
  <%= f.input :name %>
  <%= f.input :breed %>
  <%= f.input :postcode %>
  <%= f.input :description %>
  <%= f.input :sex, :label => 'Female or Male?' %>
  <%= f.input :age, priority: [ "Puppy" ], collection: ["Puppy", "Teen", "Adult", "Senior"]%>
  <%= f.input :cuddly, priority: [ 5 ], collection: [1, 2, 3, 4 ,5] %>
  <%= f.input :energetic, priority: [ 5 ], collection: [1, 2, 3, 4 ,5] %>
  <%= f.input :obedient, priority: [ 5 ], collection: [1, 2, 3, 4 ,5] %>
  <%= f.input :couchpotato, priority: [ 5 ], collection: [1, 2, 3, 4 ,5] %>
  <%= f.input :price, :hint => "Price is per day, in CAD."%>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <br>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>
